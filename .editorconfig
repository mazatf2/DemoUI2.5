root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.css]
indent_style = tab

[{*.bash, *.sh, *.zsh}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.cjs, *.js}]
indent_style = tab

[{*.har, *.jsb2, *.jsb3, *.json, .babelrc, .eslintrc, .prettierrc, .stylelintrc, bowerrc, jest.config}]
indent_size = 4
indent_style = tab

[{*.hta, *.htm, *.html, *.ng, *.sht, *.shtm, *.shtml, github-repo-post.njk}]
indent_style = tab
